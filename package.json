{
  "name": "parcel-pug-scss",
  "version": "1.0.0",
  "license": "MIT",
  "main": "",
  "scripts": {
    "build": "yarn cache clean && rm -rf build && yarn build:parcel",
    "build:parcel": "parcel build src/pages/Home/Home.pug -d build --public-url ./ --out-file index.html",
    "csscomb": "csscomb src -c .csscomb.json",
    "prettify:fix": "prettier --write",
    "start": "yarn cache clean && rm -rf dist && parcel src/pages/Home/Home.pug --port 8080 --open "
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn prettify:fix"
    ],
    "*.pug": [
      "yarn prettify:fix"
    ],
    "*.scss": [
      "csscomb --tty-mode --"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@babel/preset-react": "^7.10.1",
    "autoprefixer": "^9.8.0",
    "postcss-modules": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@prettier/plugin-pug": "^1.4.1",
    "csscomb": "^4.3.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.1.0",
    "lint-staged": "^10.2.7",
    "husky": "^4.2.5",
    "parcel-bundler": "^1.12.4",
    "parsel": "^0.3.0",
    "prettier": "^2.0.5",
    "pug": "^3.0.0",
    "sass": "^1.26.7",
    "sort-package-json": "^1.44.0"
  }
}
